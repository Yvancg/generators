{
  "version": "2025-10-20",
  "tools": [
    {
      "name": "generate-avatar",
      "description": "Generate SVG placeholder avatars or patterns (deterministic with seed).",
      "input_schema": {
        "type": "object",
        "properties": {
          "text": { "type": "string", "description": "Initials or label to render." },
          "pattern": { "type": "string", "enum": ["initials", "blocks", "circles", "random"], "default": "initials" },
          "size": { "type": "integer", "minimum": 32, "maximum": 512, "default": 128 },
          "seed": { "type": ["string", "null"], "description": "Optional deterministic seed." },
          "background": { "type": "string", "description": "Base color override (#hex, rgb, hsl)." }
        },
        "required": []
      },
      "rule": { "type": "builtin", "name": "avatar", "fields": ["text", "pattern", "size", "seed", "background"] }
    },
    {
      "name": "generate-card-number",
      "description": "Generate a Luhn-valid test card with brand, expiry, and CVC.",
      "input_schema": {
        "type": "object",
        "properties": {
          "brand": { "type": "string", "enum": ["visa", "mastercard", "amex", "discover", "random"] },
          "seed": { "type": "integer" }
        },
        "required": []
      },
      "rule": { "type": "builtin", "name": "genCard", "fields": ["brand", "seed"] }
    },
    {
      "name": "generate-color",
      "description": "Generate deterministic or random color palettes (HEX, RGB, HSL).",
      "input_schema": {
        "type": "object",
        "properties": {
          "base": { "type": "string", "description": "Base color (#hex, rgb(), or hsl())." },
          "scheme": { "type": "string", "enum": ["triadic", "complementary", "tetradic", "analogous", "monochrome", "random"], "default": "triadic" },
          "count": { "type": "integer", "minimum": 1, "maximum": 12, "default": 5 },
          "format": { "type": "string", "enum": ["hex", "rgb", "hsl"], "default": "hex" },
          "seed": { "type": ["string", "null"], "description": "Optional deterministic seed." }
        },
        "required": []
      },
      "rule": { "type": "builtin", "name": "color", "fields": ["base", "scheme", "count", "format", "seed"] }
    },
    {
      "name": "generate-dataset",
      "description": "Generate synthetic JSON, JSONL, or CSV datasets for AI fine-tuning and testing.",
      "input_schema": {
        "type": "object",
        "properties": {
          "count": { "type": "integer", "minimum": 1, "default": 10 },
          "format": { "type": "string", "enum": ["json", "jsonl", "csv"], "default": "jsonl" },
          "seed": { "type": ["string", "null"], "description": "Optional deterministic seed." },
          "schema": {
            "type": "object",
            "description": "Custom schema defining each field type.",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": { "type": "string", "enum": ["uuid", "name", "email", "sentence", "paragraph", "int", "float", "bool", "category", "date"] },
                "min": { "type": "number" },
                "max": { "type": "number" },
                "decimals": { "type": "integer" },
                "values": { "type": "array", "items": { "type": "string" } },
                "start": { "type": "string" },
                "end": { "type": "string" },
                "iso": { "type": "boolean" }
              },
              "required": ["type"]
            }
          }
        },
        "required": []
      },
      "rule": { "type": "builtin", "name": "dataset", "fields": ["count", "format", "seed", "schema"] }
    },
    {
      "name": "generate-fake-data",
      "description": "Generate deterministic fake data rows or a single entity.",
      "input_schema": {
        "type": "object",
        "properties": {
          "kind": { "type": "string", "enum": ["user", "company", "address", "rows"] },
          "count": { "type": "integer", "minimum": 1 },
          "seed": { "type": "integer" }
        },
        "required": ["kind"]
      },
      "rule": { "type": "builtin", "name": "fakeData", "fields": ["kind", "count", "seed"] }
    },
    {
      "name": "generate-hash",
      "description": "Generate a hash for a text input.",
      "input_schema": {
        "type": "object",
        "properties": {
          "text": { "type": "string" },
          "algo": { "type": "string", "enum": ["sha-256", "sha-1", "md5"] }
        },
        "required": ["text", "algo"]
      },
      "rule": { "type": "builtin", "name": "hash", "fields": ["text", "algo"] }
    },
    {
      "name": "generate-lorem",
      "description": "Generate deterministic lorem ipsum.",
      "input_schema": {
        "type": "object",
        "properties": {
          "units": { "type": "string", "enum": ["words", "sentences", "paragraphs"] },
          "count": { "type": "integer", "minimum": 1 },
          "seed": { "type": "integer" }
        },
        "required": ["units", "count"]
      },
      "rule": { "type": "builtin", "name": "lorem", "fields": ["units", "count", "seed"] }
    },
    {
      "name": "generate-password",
      "description": "Generate a password with optional symbols.",
      "input_schema": {
        "type": "object",
        "properties": {
          "length": { "type": "integer", "minimum": 4, "default": 16 },
          "symbols": { "type": "boolean", "default": true },
          "seed": { "type": "integer" }
        },
        "required": []
      },
      "rule": { "type": "builtin", "name": "password", "fields": ["length", "symbols", "seed"] }
    },
    {
      "name": "generate-phone-number",
      "description": "Generate US phone numbers with optional state, city, count, and seed.",
      "input_schema": {
        "type": "object",
        "properties": {
          "state": {
            "type": ["string", "null"],
            "enum": ["CA", "NY", "TX", "FL", null],
            "description": "Optional US state code. If provided, restricts area codes to that state."
          },
          "city": {
            "type": ["string", "null"],
            "enum": ["Los Angeles", "San Francisco", "New York", "Houston", "Miami", null],
            "description": "Optional city name. If provided and known, overrides state-based selection."
          },
          "count": {
            "type": "integer",
            "minimum": 1,
            "default": 1,
            "description": "Number of phone numbers to generate."
          },
          "seed": {
            "type": ["string", "null"],
            "description": "Optional deterministic seed for reproducible output."
          }
        },
        "required": []
      },
      "rule": {
        "type": "builtin",
        "name": "phoneNumber",
        "fields": ["state", "city", "count", "seed"]
      }
    },
    {
      "name": "generate-prompt",
      "description": "Generate AI prompt templates with placeholders, transforms, and seedable helpers.",
      "input_schema": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["text", "code", "image"], "default": "text" },
          "template": { "type": "string", "description": "Prompt string with placeholders" },
          "vars": { "type": "object", "description": "Variable map for placeholders" },
          "seed": { "type": "string", "description": "Optional deterministic seed" }
        },
        "required": ["template"]
      },
      "rule": { "type": "builtin", "name": "prompt", "fields": ["type", "template", "vars", "seed"] }
    },
    {
      "name": "generate-ssn",
      "description": "Generate synthetic US Social Security numbers for testing.",
      "input_schema": {
        "type": "object",
        "properties": {
          "count":     { "type": "integer", "minimum": 1, "default": 1 },
          "formatted": { "type": "boolean", "default": true },
          "valid":     { "type": "boolean", "default": true },
          "seed":      { "type": "string" }
        },
        "required": []
      },
      "rule": { "type": "builtin", "name": "ssn", "fields": ["count", "formatted", "valid", "seed"] }
    },
    {
      "name": "generate-token",
      "description": "Generate a token or UUID.",
      "input_schema": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["hex", "base64", "uuid4"] },
          "length": { "type": "integer", "minimum": 8 },
          "seed": { "type": "integer" }
        },
        "required": ["type"]
      },
      "rule": { "type": "builtin", "name": "token", "fields": ["type", "length", "seed"] }
    }
  ]
}
